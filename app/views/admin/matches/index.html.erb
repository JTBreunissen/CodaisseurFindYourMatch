<div class="container">
  <div class="row">
    <% flash.each do |key, value| %>
     <%= content_tag :div, value, class: "flash #{key}" %>
    <% end %>
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3>Couples</h3>
      </div>
      <div class="panel-body">
        <div class="container">
          <div class="row">
            <% (Date.today ... Date.today + 5).each do |day| %>
              <div class="col-md-7">
                  <h4><%= day.strftime "%d-%m-%Y" %></h4>
                  <hr>
              </div>
              <div class="col-md-3">
                <%= link_to "Create matches", admin_matches_path(day: day), class: "btn btn-default", :method => :create %>
              </div>
            <% end %>
         </div>
       </div>
     </div>
   </div>
 </div>
</div>
