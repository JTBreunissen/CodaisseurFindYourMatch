<%= form_for [:admin, @course] do |f| %>

  <% @course.errors.full_messages.each do |msg| %>
    <p class="alert alert-danger" role="alert"><%= msg %></p>
  <% end %>

  <div class="form-group">
    <label>Course Name</label>
    <%= f.text_field :name, placeholder: "Name of the course", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Length of course in days</label>
    <div class="input-group">
      <%= f.number_field :amount_of_days, placeholder: "How many days does this course take", class: "form-control" %>
    </div>
  </div>
  <hr>

 <div class="actions">
   <%= f.submit "Save", class: "btn btn-primary" %>
 </div>
<% end %>
